<%= form_for(@diesel, html: {class: 'form-horizontal'}) do |f| %>

  <% if @diesel.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@diesel.errors.count, "error") %> prohibited this record from being saved:
      </h2>
      <ul>
        <% @diesel.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :date_time, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.date_select :reading_at, class: 'form-control' %>
      <%= f.time_select :reading_at, :ignore_date => true, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :current_stock, class: 'col-sm-2 control-label' %>
    <div class="col-sm-2">
      <%= f.number_field :current_stock, class: 'form-control' %>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Add", class: "btn btn-success" %>
      <%= button_tag "Clear", class: "btn btn-danger", :type => 'reset' do %>
        <i class="glyphicon glyphicon-remove"></i> Clear
      <% end %>
    </div>
  </div>
<% end %>

