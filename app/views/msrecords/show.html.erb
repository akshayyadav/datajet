<div class="container">
  <h3>Petrol Record for:
    <%= @msrecord.reading_at %>
  </h3>
  <div class="table-responsive">
    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>Date</th>
          <th>Opening Stock</th>
          <th>Received Stock</th>
          <th>Actual Stock</th>
          <th>Total Stock</th>
          <th>Closing Stock</th>
          <th>Opening Meter</th>
          <th>Testing Meter</th>
          <th>Closing Meter</th>
          <th>Actual Sale</th>
          <th>Purchase Rate</th>
          <th>Sale Rate</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @msrecord.reading_at %></td>
          <td><%= @msrecord.opening_stock %></td>
          <td><%= @msrecord.received_stock %></td>
          <td><%= @msrecord.actual_stock %></td>
          <td><%= @msrecord.total_stock %></td>
          <td><%= @msrecord.closing_stock %></td>
          <td><%= @msrecord.opening_meter %></td>
          <td><%= @msrecord.testing_meter %></td>
          <td><%= @msrecord.closing_meter %></td>
          <td><%= @msrecord.actual_sale %></td>
          <td><%= @msrecord.purchase_rate %></td>
          <td><%= @msrecord.sale_rate %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class='col-md-2'>
    <%= link_to edit_msrecord_path(@msrecord), class: "btn btn-warning btn-sm" do %>
      <i class="glyphicon glyphicon-pencil"></i> Edit
    <% end %>
    <%= link_to msrecord_path(@msrecord), class: "btn btn-danger btn-sm",
      method: :delete,
      data: { confirm: 'Are you sure?' } do %>
      <i class="glyphicon glyphicon-remove"></i> Delete
    <% end %>
  </div>
  <div>
    <%= link_to msrecords_path, class: "btn btn-info btn-sm" do %>
      <i class="glyphicon glyphicon-arrow-left"></i> Back
    <% end %>
  </div>
</div>
