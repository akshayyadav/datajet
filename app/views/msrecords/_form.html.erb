<%= form_for(@msrecord, html: {class: 'form-horizontal'}) do |f| %>

  <% if @msrecord.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@msrecord.errors.count, "error") %> prohibited this record from being saved:
      </h2>
      <ul>
        <% @msrecord.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :date, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.date_select :reading_at, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :received_stock, class: 'col-sm-2 control-label' %>
    <div class="col-sm-2">
      <%= f.number_field :received_stock, class: 'form-control' , :'data-toggle' => 'popover', :'data-trigger' => 'hover', :'data-placement' => 'bottom', :'data-content' => 'Stock added today' %>
    </div>
    <%= f.label :actual_stock, class: 'col-sm-2 control-label' %>
    <div class="col-sm-2">
      <%= f.number_field :actual_stock, class: 'form-control', :'data-toggle' => 'popover', :'data-trigger' => 'hover', :'data-placement' => 'bottom', :'data-content' => 'Tank dip reading' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :opening_meter, class: 'col-sm-2 control-label' %>
    <div class="col-sm-2">
      <%= f.number_field :opening_meter, class: 'form-control' , :'data-toggle' => 'popover', :'data-trigger' => 'hover', :'data-placement' => 'bottom', :'data-content' => 'HSD machine meter reading' %>
    </div>
    <%= f.label :testing_meter, class: 'col-sm-2 control-label' %>
    <div class="col-sm-2">
      <%= f.number_field :testing_meter, class: 'form-control' , :'data-toggle' => 'popover', :'data-trigger' => 'hover', :'data-placement' => 'bottom', :'data-content' => 'HSD testing value' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :purchase_rate, class: 'col-sm-2 control-label' %>
    <div class="col-sm-2">
      <%= f.number_field :purchase_rate, class: 'form-control', step: 0.001, :'data-toggle' => 'popover', :'data-trigger' => 'hover', :'data-placement' => 'bottom', :'data-content' => 'Purchase rate for stock-in HSD' %>
    </div>
    <%= f.label :sale_rate, class: 'col-sm-2 control-label' %>
    <div class="col-sm-2">
      <%= f.number_field :sale_rate, class: 'form-control', step: 0.001, :'data-toggle' => 'popover', :'data-trigger' => 'hover', :'data-placement' => 'bottom', :'data-content' => 'Current sale rate for HSD' %>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= button_tag "Add", class: "btn btn-success", :type => 'submit' do %>
        <i class="glyphicon glyphicon-ok"></i> Add
      <% end %>
      <%= button_tag "Clear", class: "btn btn-danger", :type => 'reset' do %>
        <i class="glyphicon glyphicon-remove"></i> Clear
      <% end %>
    </div>
  </div>
<% end %>

